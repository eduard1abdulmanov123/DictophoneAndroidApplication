<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimaryApplication</item>
    <item name="colorPrimaryDark">@color/colorSecondaryApplicationDark</item>
    <item name="colorAccent">@color/colorPrimaryApplication</item>
  </style>

  <style name="UserDialog" parent="@style/Theme.AppCompat.Light.Dialog">
    <item name="windowNoTitle">true</item>
    <item name="windowActionBar">false</item>
    <item name="colorAccent">@color/colorPrimaryApplication</item>
    <item name="android:windowBackground">@android:color/transparent</item>
  </style>

  <style name="EditText">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:background">@drawable/border_rectangle_circle</item>
    <item name="android:textCursorDrawable">@null</item>
    <item name="android:padding">7dp</item>
    <item name="android:textSize">16sp</item>
  </style>

  <style name="ImageButtonCircleDictaphone">
    <item name="android:layout_height">60dp</item>
    <item name="android:layout_width">60dp</item>
    <item name="android:padding">12dp</item>
    <item name="android:scaleType">fitXY</item>
    <item name="android:background">@drawable/border_circle_view_red</item>
  </style>
</resources>
